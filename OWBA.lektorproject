[project]
name = Offene Werkstatt Bamberg
url = https://owba.de/
locale = de_DE

[servers.publish-production]
name = Publish: Production
default = yes
target = path:///srv/http/de-owba

[servers.git-commit]
name = Git: Commit
target = cmd://git/add * && git commit -m 'Automerge changes'; git push

[servers.git-pull]
name = Git: Pull
target = cmd://git/pull

[servers.git-status]
name = Git: Status
target = cmd://git/status

[servers.git-diff]
name = Git: Diff
target = cmd://git/diff
